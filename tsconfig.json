{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ],
      "@app/inbound-db": [
        "libs/inbound-db/src"
      ],
      "@app/inbound-db/*": [
        "libs/inbound-db/src/*"
      ],
      "@app/helios-db": [
        "libs/helios-db/src"
      ],
      "@app/helios-db/*": [
        "libs/helios-db/src/*"
      ]
    }
  }
}